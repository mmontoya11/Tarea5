<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Selecciones su imagen"
       android:paddingBottom="10dp"
       android:textSize="18dp"/>
    <Spinner
        android:id="@+id/item_activity_spinner_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Spinner_Drawables"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese su titulo"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/item_activity_edit_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciones la categoria"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp"/>
    <Spinner
        android:id="@+id/item_activity_spinner_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciones la tienda"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp"/>
    <Spinner
        android:id="@+id/item_activity_spinner_tiendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/activity_item_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"/>
</LinearLayout>